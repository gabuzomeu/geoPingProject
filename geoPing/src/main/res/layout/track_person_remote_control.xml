<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <include
                android:id="@+id/track_person_remote_control_photo_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/header_photo" />


        <Button
                android:id="@+id/track_person_remote_control_pairingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/call_log_indent_margin"
                android:layout_below="@+id/track_person_remote_control_photo_header"
                android:text="@string/person_geoping_pairing_action"
                />
        <Button
                android:id="@+id/track_person_remote_control_openButton"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/call_log_indent_margin"
                android:layout_alignLeft="@+id/track_person_remote_control_pairingButton"
                android:layout_below="@+id/track_person_remote_control_pairingButton"
                android:text="@string/sms_action_command_openApp"
                />

        <Button
                android:id="@+id/track_person_remote_control_hideButton"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/call_log_indent_margin"
                android:layout_alignLeft="@+id/track_person_remote_control_pairingButton"
                android:layout_below="@+id/track_person_remote_control_openButton"
                android:text="Test Long Mock SMS"
                />



    </RelativeLayout>

</ScrollView>