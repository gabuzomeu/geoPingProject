<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/titleErmergencyPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="@string/menu_emergency_mode"  />



    <TextView
        android:id="@+id/labelErmergencyPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleErmergencyPassword"
        android:text="@string/prefs_emergency_password"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/emergencyPasswordEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/labelErmergencyPassword"
        android:layout_below="@id/labelErmergencyPassword"
        android:ems="10"
        android:hint="@string/prefs_emergency_password"
        android:inputType="numberPassword"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/person_phone"
        style="@style/entity_edit"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/emergencyPasswordEdit"
        android:hint="@string/person_phone"
        android:ems="10"
        android:inputType="phone"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <ImageButton
        android:id="@+id/select_contact_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/person_phone"
        android:layout_toRightOf="@id/person_phone"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_action_user"
        android:contentDescription="@string/menu_select_contact"
        android:textAppearance="?android:attr/textAppearanceMedium" />



    <Button
        android:id="@+id/geoping_button_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/person_phone"
        android:layout_marginTop="20dp"
        android:text="@string/menu_geoping"
        android:textAppearance="?android:attr/textAppearanceMedium" />


</RelativeLayout>