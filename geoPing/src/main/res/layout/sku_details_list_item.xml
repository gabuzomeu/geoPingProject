<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/entity_list_item_container"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip">

    <ImageView
            android:id="@+id/sku_detail_imageView"
            android:minWidth="60dip"
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:src="@drawable/ic_contact_picture_holo_light"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="5dp"
            />



    <TextView
            android:id="@+id/skuDetails_price_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:minWidth="60dp"

            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1,00 euros"
            />


    <View
            android:id="@+id/header_photo_subelt_divider"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/skuDetails_price_textView"
            android:background="@drawable/ic_divider_dashed_holo_dark"
            />




    <TextView
            android:id="@+id/skuDetails_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@+id/sku_detail_imageView"
            android:layout_toLeftOf="@+id/header_photo_subelt_divider"
            android:singleLine="false"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/call_log_primary_text_color"
            android:text="The SKU Title to display"
            />


    <TextView
            android:id="@+id/skuDetails_description_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/skuDetails_title_textView"
            android:layout_toLeftOf="@+id/header_photo_subelt_divider"
            android:layout_alignLeft="@+id/skuDetails_title_textView"

            android:singleLine="false"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/call_log_secondary_text_color"
            android:text="The Sku Description with all detail needed to expose"
            />




</RelativeLayout>